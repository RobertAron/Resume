{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"fix": "unsafe",
					"level": "info",
					"options": {}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth":120
	}
}